<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="スピード調整"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff8f77"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/kotaiti1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/level1"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/waku"
        android:ems="10"
        android:inputType="text"
        android:text="31" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kotaiti1"
        android:layout_toLeftOf="@+id/kotaiti1"
        android:text="個体値"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="スピード調整にお使いください"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <Spinner
        android:id="@+id/dougu_Spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignLeft="@+id/Rank_Spinner1"
        android:layout_alignRight="@+id/Rank_Spinner1"
        android:layout_alignTop="@+id/TextView03"
        android:background="@drawable/waku"
        android:entries="@array/dougu"
        android:text="0" />

    <EditText
        android:id="@+id/doryokuti1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kotaiti1"
        android:layout_alignRight="@+id/kotaiti1"
        android:layout_alignTop="@+id/TextView02"
        android:background="@drawable/waku"
        android:ems="10"
        android:inputType="text"
        android:text="252" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="ポケモン名"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/mahi_checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/oikaze_checkBox1"
        android:layout_alignBottom="@+id/oikaze_checkBox1"
        android:layout_alignLeft="@+id/TextView02"
        android:text="まひ"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/oikaze_checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doryokuti1"
        android:layout_toRightOf="@+id/mahi_checkBox1"
        android:text="おいかぜ"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/abi_Box01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mahi_checkBox1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mahi_checkBox1"
        android:text="すいすい，ようりょくそ，すなかき，かるわざ"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kotaiti1"
        android:layout_toLeftOf="@+id/doryokuti1"
        android:text="努力値"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <AutoCompleteTextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seikaku1"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:background="@drawable/waku"
        android:ems="10"
        android:hint="ポケモン名"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/hayaasi_checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/abi_Box01"
        android:layout_toRightOf="@+id/oikaze_checkBox1"
        android:text="はやあし"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/abi_Box01"
        android:text="算出"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="27dp"
        android:text=" " />

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView5" >
    </RelativeLayout>

    <EditText
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/textView1"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/waku"
        android:ems="10"
        android:inputType="text"
        android:text="50" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/seikaku1"
        android:text="レベル"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <Spinner
        android:id="@+id/seikaku1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/level1"
        android:layout_alignRight="@+id/name1"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:background="@drawable/waku"
        android:entries="@array/seikaku"
        android:text="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/name1"
        android:text="せいかく"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_toLeftOf="@+id/dougu_Spinner1"
        android:text="道具"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <Spinner
        android:id="@+id/Rank_Spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView05"
        android:layout_alignRight="@+id/hayaasi_checkBox1"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/TextView05"
        android:background="@drawable/waku"
        android:entries="@array/rank"
        android:text="0" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_toRightOf="@+id/kotaiti1"
        android:text="ランク"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1" >

