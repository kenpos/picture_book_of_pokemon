                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="無振り"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="fill_parent"
