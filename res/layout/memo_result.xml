<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android1:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:password="false"
            android:text="ポケモン名が表示されます"
            android:textColor="#ff8f77"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nikku_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NAME"
            android:text="ニックネームが表示されます"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView10"
            android:text="HP"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="攻撃"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView4"
            android:text="防御"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="特攻"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView6"
            android:text="特防"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView7"
            android:text="素早"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/HP_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/ATK_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignTop="@+id/DEF_text"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/DEF_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/SATK_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignTop="@+id/DEF_text"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/SDEF_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/SPE_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nikku_name"
            android:text="性格"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:text="特性"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView9"
            android:text="道具"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/waza_list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/HP_text"
            android:text="技リスト1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/waza_list2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/waza_list1"
            android:text="技リスト2"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/waza_list3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/waza_list4"
            android:layout_below="@+id/waza_list4"
            android:text="技リスト3"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/waza_list4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ATK_text"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/waza_list1"
            android:text="技リスト4"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/waza_list2"
            android:text="コメント"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/seikaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/nikku_name"
            android:text="登録した性格が表示されます"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tokusei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/seikaku"
            android:layout_below="@+id/seikaku"
            android:text="登録した特性が表示されます"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tokusei"
            android:layout_below="@+id/tokusei"
            android:text="登録した道具が表示されます"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:onClick="jump"
            android:text="登録画面へ"
            android:textColor="#ffffff" />

        <TextView
            android1:id="@+id/textView1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentBottom="true"
            android1:layout_alignParentLeft="true"
            android1:layout_marginBottom="25dp"
            android1:text="TextView" />

        <ListView
            android1:id="@+id/listView1"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_above="@+id/textView1"
            android1:layout_alignParentLeft="true"
            android1:layout_below="@+id/comment" >

        </ListView>

        <RelativeLayout
            android1:id="@+id/root"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:layout_alignParentBottom="true"
            android1:layout_alignParentLeft="true"
            android1:layout_alignTop="@+id/textView1" >

        </RelativeLayout>

    </RelativeLayout>
    <!-- XMLレイアウトで実装 -->

</RelativeLayout>