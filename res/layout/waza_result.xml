<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment" >
        <TextView
            android:id="@+id/WAZA_NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:password="false"
            android:text="技名"
            android:textColor="#ff8f77"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kouka1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iryoku_text"
            android:layout_below="@+id/iryoku_text"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/WAZA_NAME"
            android:text="タイプ"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="威力"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="命中"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView4"
            android:text="PP"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="分類"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView6"
            android:text="対象"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView7"
            android:text="接触"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/iryoku_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/meityu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignTop="@+id/PP_txt"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/PP_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/bun_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignTop="@+id/PP_txt"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tai_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:text="効果1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/sessyoku_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:text="効果1"
            android:textColor="#ffffff" />
 
    <!-- XMLレイアウトで実装 -->

    <ListView
        android1:id="@+id/listView1"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView1"
        android1:layout_alignLeft="@+id/WAZA_NAME"
        android1:layout_below="@+id/kouka1" >

    </ListView>

    <RelativeLayout
        android1:id="@+id/root"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_alignLeft="@+id/kouka1"
        android1:layout_alignTop="@+id/textView1" >

    </RelativeLayout>

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/listView1"
        android1:layout_alignParentBottom="true"
        android1:layout_marginBottom="20dp"
        android1:text="       " />

</RelativeLayout>